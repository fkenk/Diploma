<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="arthurveslo.my.myapplication.SaveActivity"
    tools:showIn="@layout/activity_save">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0 steps"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons"
            android:layout_below="@+id/icon_sport"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_alignBottom="@+id/imageView3" />

        <TextView
            android:id="@+id/textLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_sport"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon_sport"
            android:gravity="center"
            android:text="Run1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons" />

        <TextView
            android:id="@+id/textCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_below="@+id/textLatitude"
            android:layout_toEndOf="@+id/imageView2"
            android:gravity="center"
            android:text="calories:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons" />

        <TextView
            android:id="@+id/textDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="distance:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons"
            android:layout_alignTop="@+id/distance"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_alignBottom="@+id/distance" />

        <TextView
            android:id="@+id/textAvrSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:gravity="center"
            android:text="speed:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons" />


        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textAvrSpeed"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="TIME"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorText_Icons"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/icon_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_run_white_36dp" />

        <ImageView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/point_objects_36"
            android:layout_alignBottom="@+id/textLatitude"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textAvrSpeed"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_stop_black_48dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fire_white_36dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/textLatitude"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/white_footprint_36"
            android:layout_alignStart="@+id/distance"
            android:layout_below="@+id/icon_sport"
            android:layout_alignBottom="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textCalories"
            android:layout_margin="5dp"
            android:src="@drawable/ic_speedometer_white_36dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_toEndOf="@+id/textCalories"
            android:gravity="center"
            android:text=" kal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons"
            android:layout_alignBottom="@+id/textCalories" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" m/s"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons"
            android:layout_alignTop="@+id/textAvrSpeed"
            android:layout_toEndOf="@+id/textAvrSpeed"
            android:layout_alignBottom="@+id/textAvrSpeed" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" m"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText_Icons"
            android:layout_alignTop="@+id/textDistance"
            android:layout_toEndOf="@+id/textDistance"
            android:layout_alignBottom="@+id/textDistance" />

    </RelativeLayout>

</RelativeLayout>
